{
    "compilerOptions": {
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "lib": ["es5", "es6"],
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": false,
      "outDir": "dist",
      "resolveJsonModule": true,
      "sourceMap": true,
      "strict": true,
      "target": "es2020",
      "alwaysStrict": false
    },
    "exclude": ["node_modules"],
    "include": [
      "artifacts-zk/**/*",
      "artifacts-zk/**/*.json",
      "deploy/**/*",
      "scripts/**/*",
      "tasks/**/*",
      "test/**/*",
      "typechain/**/*",
      "types/**/*",
      "hardhat.config.ts",
      "hardhat.network.ts"
    ]
}
  